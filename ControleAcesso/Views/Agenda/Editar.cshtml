@model Viva.Estetica.Site.Models.AgendaModels

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm("Editar","Agenda", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>AgendaModels</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <p style="color:red;">@ViewBag.mensagem</p>
    <div class="form-group">
        @Html.LabelFor(model => model.DataAgendamento, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class='col-sm-6' style="width:295px;">
            <div class='input-group date datetimepicker' id='datetimepicker5'>
                @Html.EditorFor(model => model.DataAgendamento, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            @Html.ValidationMessageFor(model => model.DataAgendamento, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Servico, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Servico.Id, (SelectList)ViewBag.Servicos, "", new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.DataAgendamento, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("voltar", "Index")
</div>
